<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:vc="http://www.vocado.com/vm/common"
           xmlns="http://www.vocado.com/vm/fas"
           targetNamespace="http://www.vocado.com/vm/fas"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <xs:include schemaLocation="common/FasCommon.xsd"/>
    <xs:include schemaLocation="common/FasStudentAcademicsCommon.xsd"/>
    <xs:include schemaLocation="common/FasDisbursementCommon.xsd"/>
    <xs:include schemaLocation="common/FasReturnToLenderCommon.xsd"/>
    <xs:import namespace="http://www.vocado.com/vm/common" schemaLocation="common/VocadoCommon.xsd"/>

    <xs:annotation>
        <xs:documentation>
            These messages pertain to student refunds:
            FasReturnToLenderEvent: Refunds information, generated by internal events such as repackaging.
            FasReturnToLenderReply: Refunds information, generated by a customer request.
            FasReturnToLenderRequest: The customer request.
            FasReturnToLenderEvent and FasReturnToLenderReply contain the same data. The only
            difference between the two messages lies in what triggers them.
        </xs:documentation>
    </xs:annotation>

    <xs:element name="FasReturnToLenderV2Request">
        <xs:annotation>
            <xs:documentation>
                A customer sends this message to request a student's refunds.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="vc:EnvelopeType">
                    <xs:sequence>
                        <xs:choice>
                            <xs:sequence>
                                <xs:element name="ExternalStudentId" type="vc:ExternalIdentifierType"/>
                                <xs:element name="ProgramCode" minOccurs="0" type="ProgramCodeType"/>
                            </xs:sequence>
                            <xs:element name="EnrollmentId" type="vc:NonBlankStringType"/>
                        </xs:choice>
                    </xs:sequence>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>

    <xs:element name="FasReturnToLenderV2Reply">
        <xs:annotation>
            <xs:documentation>
                This message describes a student's refunds.
                The system sends it in response to a FasReturnToLenderRequest message.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="FasReturnToLenderEventV2Type"/>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>

    <xs:element name="FasReturnToLenderV2Event">
        <xs:annotation>
            <xs:documentation>
                This Message is created by the Vocado FAS system to provide the refunds information.
                The generation of a message of this type could be triggered via an event or web-service call.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="FasReturnToLenderEventV2Type"/>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="FasReturnToLenderEventV2Type">
        <xs:complexContent>
            <xs:extension base="vc:EnvelopeType">
                <xs:sequence>
                    <xs:element name="Student" type="FasDisbursementStudent"/>
                    <xs:element name="Program" type="FasDisbursementProgram"/>
                    <xs:element name="Funds">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="Fund" type="RtLFundV2Type" minOccurs="1" maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="RtLFundV2Type">
        <xs:sequence>
            <xs:element name="FundType" type="FundTypeEnum"/>
            <xs:element name="FundCode" type="vc:NonBlankStringType"/>
            <xs:element name="FundExtension" type="vc:NonBlankStringType" minOccurs="0"/>
            <xs:element name="AcademicYears">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="AcademicYear" type="RtLAcademicYearV2Type" minOccurs="1" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="RtLAcademicYearV2Type">
        <xs:complexContent>
            <xs:extension base="FasBaseAcademicYearType">
                <xs:choice>
                    <xs:element name="PaymentPeriods" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="PaymentPeriod" type="RtLPaymentPeriodType" minOccurs="0"
                                            maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="LoanPeriods" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="LoanPeriod" type="RtLLoanPeriodV2Type" minOccurs="0"
                                            maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="NfrPeriods" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="NfrPeriod" type="RtLNfrPeriodType" minOccurs="0"
                                            maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:choice>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="RtLLoanPeriodV2Type">
        <xs:complexContent>
            <xs:extension base="FasBaseLoanPeriodType">
                <xs:sequence>
                    <xs:element name="LoanPeriodNumber" type="vc:PositiveIntType"/>
                    <xs:element name="LoanPaymentPeriods" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="LoanPaymentPeriod" type="RtLLoanPaymentPeriodType" minOccurs="0"
                                            maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

</xs:schema>